# WCH ADC configuration options

config ADC_WCH
	bool "WCH ADC driver"
	default y
	depends on DT_HAS_WCH_ADC_ENABLED
	select PINCTRL
	help
	  Enable the WCH ADC driver.

config ADC_WCH_DMA
	bool "WCH ADC DMA support"
	depends on ADC_WCH
	select DMA
	help
	  Enable DMA support for the WCH ADC driver.

config ADC_WCH_TOUCHKEY
	bool "WCH CH32 Touchkey driver"
	default y
	depends on DT_HAS_WCH_CH32_TOUCHKEY_ENABLED
	select ADC_CONTEXT_NET_PKT_BUFFER
	help
	  Enable WCH CH32 Touchkey driver.
