/dts-v1/;

#include <wch/ch32l103/ch32l103.dtsi>
#include "ch32l103_evt-pinctrl.dtsi"

/ {
	model = "WCH CH32L103 Evaluation Board";
	compatible = "wch,ch32l103-evt";

	aliases {
		led0 = &led0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpioa 1 GPIO_ACTIVE_HIGH>;
			label = "User LED";
		};
	};

	soc {
		zephyr,console = &sdi;
		zephyr,shell-uart = &sdi;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

};

&clk_hsi {
	status = "okay";
};

&pll {
	status = "okay";
	clocks = <&clk_hsi>;
	mul = <6>;
};

&usart1 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&usart1_default>;
	pinctrl-names = "default";
};

&gpioa {
	status = "okay";
};

&rcc {
	status = "okay";
	clocks = <&pll>;
};

&cpu0 {
	clock-frequency = <48000000>;
};
